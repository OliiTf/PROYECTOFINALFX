<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="LOGIN" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" styleClass="lbl, lbl-info" >
        <graphic>
            <FontAwesomeIconView glyphName="USER_CIRCLE_ALT" glyphSize="30" fill="#a07af3"/>
        </graphic>
    </Label>

    <TextField fx:id="UserName" GridPane.columnIndex="0" GridPane.rowIndex="1" promptText="UserName">


    </TextField>
    <PasswordField fx:id="Password" GridPane.columnIndex="0" GridPane.rowIndex="2" promptText="Password">

    </PasswordField>

    <ComboBox fx:id="cmbE" GridPane.columnIndex="0" GridPane.rowIndex="3" promptText="Estados" GridPane.halignment="CENTER">

    </ComboBox>

    <Label GridPane.rowIndex="4" GridPane.columnIndex="0">

    </Label>

    <Label GridPane.rowIndex="5" GridPane.columnIndex="0">

    </Label>

    <Label GridPane.rowIndex="6" GridPane.columnIndex="0">

    </Label>

    <Label GridPane.rowIndex="7" GridPane.columnIndex="0">

    </Label>

    <Label GridPane.rowIndex="8" GridPane.columnIndex="0">

    </Label>


    <HBox GridPane.rowIndex="9" GridPane.columnIndex="0" alignment="CENTER" spacing="15">
        <Button fx:id="Accept" text="Accept" styleClass="btn, btn-lg, btn-success">
            <graphic>
                <FontAwesomeIconView glyphName="CHECK" glyphSize="30" fill="forestgreen"/>
            </graphic>
        </Button>






        <Button fx:id="Cancel" text="Cancel" styleClass="btn, btn-lg, btn-danger" >
            <graphic>
                <FontAwesomeIconView glyphName="WINDOW_CLOSE" glyphSize="30" fill="red"/>
            </graphic>
        </Button>




    </HBox>

</GridPane>